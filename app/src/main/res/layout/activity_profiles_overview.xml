<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/po_textView1"
        android:layout_width="380dp"
        android:layout_height="46dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/app_profile_overview_title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/po_textView2"
        android:layout_width="380dp"
        android:layout_height="74dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/app_profile_overview_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/po_textView1" />

    <include
        android:id="@+id/rplay_1"
        layout="@layout/resume_profile_layout"
        android:layout_width="181dp"
        android:layout_height="215dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/po_textView2" />

    <include
        android:id="@+id/rplay_2"
        layout="@layout/resume_profile_layout"
        android:layout_width="193dp"
        android:layout_height="215dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/po_textView2" />

    <include
        android:id="@+id/rplay_3"
        layout="@layout/resume_profile_layout"
        android:layout_width="181dp"
        android:layout_height="215dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rplay_1" />

    <include
        android:id="@+id/rplay_4"
        layout="@layout/resume_profile_layout"
        android:layout_width="193dp"
        android:layout_height="215dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rplay_1" />

    <include
        android:id="@+id/rplay_5"
        layout="@layout/resume_profile_layout"
        android:layout_width="181dp"
        android:layout_height="215dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rplay_3" />

    <include
        android:id="@+id/rplay_6"
        layout="@layout/resume_profile_layout"
        android:layout_width="193dp"
        android:layout_height="215dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rplay_3" />
</androidx.constraintlayout.widget.ConstraintLayout>